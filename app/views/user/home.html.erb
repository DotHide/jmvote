<h4 class="text-center">您好，<%= @user.name %></h4>
<h2 class="text-center">进入第几轮</h2>
<br>
<div class="row center-block text-center">
	<% @rounds.each do |round| %>
		<input type="radio" name="round" id="round<%= round[:id] %>" value="<%= round[:id] %>" <%= 'checked' if round[:id] == 1 %>>
		<label for="round<%= round[:id] %>">
			<span class="pull-left"><%= round[:id] %></span>）<%= round[:title] %>
		</label>
	<% end %>
</div>
<hr>
<div class="form-group">
  <div class="text-center">
    <!-- <button type="submit" class="btn btn-primary">进入投票</button> -->
    <%= link_to '进入投票', vote_new_path, id: 'vote', class: 'btn btn-primary', :onclick => 'vote();' %>
  </div>
</div>

<script type="text/javascript">
	var href_origin = $('#vote').attr('href');
	function vote(){
		var round = $('input[name=round]:checked').val();
		var user_id = <%= @user.id %>;
		$('#vote').attr('href', href_origin + '?round=' + round + '&user_id=' + user_id);
		// alert($('#vote').attr('href'));
	}
</script>